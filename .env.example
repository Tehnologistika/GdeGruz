# Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# Telegram Admin User ID
ADMIN_ID=your_admin_id_here

# Telegram Group Chat ID for escalations
GROUP_CHAT_ID=your_group_chat_id_here

# Telegram Group for Documents (forwarding)
DOCUMENTS_GROUP_ID=your_documents_group_id_here

# Reminder interval in hours (default: 0.2 = 12 minutes)
REMIND_HOURS=0.2

# Timezone
TIMEZONE=Europe/Berlin

# API Secret Token (optional, for web API)
API_SECRET_TOKEN=your_secret_token_here

# Telegram ID кураторов (через запятую)
# Узнать свой ID можно у @userinfobot
CURATOR_IDS=123456789,987654321
